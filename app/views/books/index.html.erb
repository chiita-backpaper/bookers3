<div class='container px-5 px-sm-0'>
<div class='row'>

<!--サイドバー-->
<div class='col-md-3'>
  <%= render 'shared/userinfo' %>
  <%= render 'shared/new_book.html.erb' %>
</div>
<!---->

<div class='col-md-8 offset-md-1'>
  <h2>Books</h2>
  <table class = 'table table-hover table-inverse' >
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
    <% user = User.find(book.user_id) %>
      <tr>
        <td><%= link_to (attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"), user_path(user) %></td>
        <td><%=link_to book.title, book_path(book) %></td>
        <td><%= book.body %></p></td>
        <!--<td><%#= link_to 'Show', book_path(book)%></td>-->
        <% if book.favorited_by?(current_user) %>
          <td><%= link_to book_favorites_path(book), method: :delete do %>
            ♥<%= book.favorites.count %> いいね</td>
          <% end %>
        <% else %>
          <td><%= link_to book_favorites_path(book), method: :post do %>
            ♡<%= book.favorites.count %> いいね</td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
</div>