<div class='container px-5 px-sm-0'>
<div class='row'>

<!--サイドバー-->
<div class='col-md-3'>
  <%= render 'shared/userinfo' %>
  <%= render 'shared/new_book' %>
</div>
<!---->

<div class='col-md-8 offset-md-1'>
  <h2>Users</h2>
  <table class='table table-hover table-inverse'>
    <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody class="table table-striped">
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to (attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50'), user_path(user) %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user)%></td>
        </tr>
      <% end %>
      </tbody>
  </table>
</div>
</div>
</div>