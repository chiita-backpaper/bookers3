<% if @obj.favorited_by?(current_user) %>
  <td><%= link_to book_favorites_path(@obj), class: "fas fa-heart", method: :delete do %>
    <%= @obj.favorites.count %>
    <% end %>
  </td>
<% else %>
  <td>
    <%= link_to book_favorites_path(@obj), class: "fas fa-heart", method: :post do %>
    <%= @obj.favorites.count %>
    <% end %>
  </td>
<% end %>